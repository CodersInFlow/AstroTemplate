---
import Layout from '../layout.astro';
import BlogList from '../../../shared/components/BlogList.astro';

const category = Astro.url.searchParams.get('category');
---

<Layout title="Blog - Preston Garrison" showHeader={false}>
  <main class="min-h-screen bg-white">
    <div class="container mx-auto px-4 py-8">
      <h1 class="text-4xl font-bold mb-8 text-gray-900">Blog</h1>
      <BlogList database="prestongarrison_db" category={category} />
    </div>
  </main>
</Layout>