---
// This page handles all blog routes and delegates to the BlogApp component
export const prerender = false;

import Layout from '../../layout.astro';
import BlogApp from '../../../../modules/blog/BlogApp.astro';
import config from '../../config.json';

// Import blog theme styles
import '../../../../modules/blog/styles/blog-theme.css';

// Preston Garrison's blog theme - minimal light theme
const blogTheme = {
  mode: 'light',
  primaryColor: config.theme.primaryColor, // #000000 (black)
  accentColor: config.theme.accentColor, // #4b5563 (gray-600)
  
  // Light theme with clean whites and grays
  pageBg: 'bg-white',
  contentBg: 'bg-white',
  
  // Using grayscale palette for minimalist design
  btnPrimary: 'bg-gray-900 hover:bg-black text-white',
  btnSecondary: 'bg-gray-100 hover:bg-gray-200 text-gray-900',
  btnDanger: 'bg-red-600 hover:bg-red-700 text-white',
  
  // Text colors for light theme
  textPrimary: 'text-gray-900',
  textSecondary: 'text-gray-600',
  textMuted: 'text-gray-400',
  
  // Links using dark gray
  link: 'text-gray-700 hover:text-black',
  linkDanger: 'text-red-600 hover:text-red-700',
  
  // Cards and containers
  card: 'bg-white border-gray-200',
  cardHover: 'hover:bg-gray-50',
  
  // Form elements
  input: 'bg-white border-gray-300 text-gray-900 placeholder-gray-400 focus:border-gray-500 focus:ring-gray-500',
  select: 'bg-white border-gray-300 text-gray-900 focus:border-gray-500 focus:ring-gray-500',
  checkbox: 'bg-white border-gray-300 text-gray-600 focus:ring-gray-500',
  
  // Navigation
  navBg: 'bg-white border-gray-200',
  navActive: 'border-gray-900 text-gray-900',
  navInactive: 'text-gray-500 hover:text-gray-700 border-transparent',
  
  // Badges and labels
  badge: 'bg-gray-100 text-gray-700',
  badgeSecondary: 'bg-gray-50 text-gray-600',
  
  // Categories
  categoryBg: 'bg-gray-700 hover:bg-gray-800',
  categoryText: 'text-white',
  
  // Alerts
  alertSuccess: 'bg-green-50 text-green-800 border-green-200',
  alertError: 'bg-red-50 text-red-800 border-red-200',
  alertInfo: 'bg-blue-50 text-blue-800 border-blue-200'
};
---

<Layout title="Blog">
  <BlogApp theme={blogTheme} config={config} />
</Layout>