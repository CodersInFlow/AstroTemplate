---
import siteContent from '../site-content.json';
const { hero } = siteContent;
---

<section class="min-h-screen flex items-center justify-center relative bg-gradient-to-br from-black to-gray-900 py-20">
  <div class="container mx-auto px-6 text-center">
    <h1 class="text-6xl font-bold mb-4 text-white animate-pulse">
      {hero.title}
    </h1>
    <p class="text-2xl text-gray-300 mb-8">
      {hero.subtitle}
    </p>
    
    <div class="mt-16">
      <img src={hero.image} alt="DarkFlows Dashboard" class="mx-auto rounded-lg shadow-2xl max-w-4xl w-full" />
    </div>
    
    <div class="mt-16">
      <h2 class="text-4xl font-bold mb-4 text-white">{hero.finalTitle}</h2>
      <p class="text-xl text-gray-300">{hero.finalSubtitle}</p>
    </div>
  </div>
</section>