<footer class="bg-black text-gray-300 border-t border-gray-800">
  <div class="py-4 flex justify-center">
    <div class="w-full max-w-[1024px] px-4">
      <div class="flex flex-wrap justify-between">
        {footer.sections.map((section) => (
          <div class="flex flex-col shrink-0 basis-auto pr-8 last:pr-0">
            <h3 class="text-white font-medium text-base">{section.title}</h3>
            <ul class="-mt-1">
              {section.links.map((link) => (
                <li class="leading-tight">
                  <a 
                    href={link.href}
                    class="text-sm text-gray-400 hover:text-white transition-colors duration-200 block py-0.5"
                  >
                    {link.text}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
      
      <div class="mt-4 flex flex-wrap justify-between items-center gap-2">
        <p class="text-gray-400 text-sm">{footer.tagline}</p>
        <div class="flex items-center gap-3">
          {footer.socials.map((social) => (
            <a
              href={social.href}
              class="text-gray-400 hover:text-white transition-colors duration-200"
              target="_blank"
              rel="noopener noreferrer"
            >
              <Fragment set:html={socialIcons[social.icon]} />
            </a>
          ))}
        </div>
      </div>
    </div>
  </div>
</footer>