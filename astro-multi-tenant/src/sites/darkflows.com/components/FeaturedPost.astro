---
// Fetch featured posts at build time
let featuredPosts = [];
let loading = true;

try {
  const response = await fetch('http://127.0.0.1:3001/api/posts?category=Featured');
  const data = await response.json();
  if (data.posts) {
    featuredPosts = data.posts.map((post) => ({
      ...post,
      category: post.category?.name || 'Uncategorized'
    }));
  }
  loading = false;
} catch (error) {
  console.error('Error fetching featured posts:', error);
  loading = false;
}
---

{loading ? (
  <div class="max-w-7xl mx-auto px-4 py-8">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="bg-gray-800 animate-pulse h-64 rounded-lg"></div>
      <div class="bg-gray-800 animate-pulse h-64 rounded-lg"></div>
    </div>
  </div>
) : featuredPosts.length > 0 ? (
  <div class="max-w-7xl mx-auto px-4 pt-16 pb-4">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-2xl font-bold">Featured</h2>
      <a 
        href="/blog" 
        class="text-blue-400 hover:text-blue-300 transition-colors"
      >
        More Posts â†’
      </a>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {featuredPosts.map((post) => (
        <a href={`/blog/${post._id}`} class="group">
          <article class="h-full bg-[#1B1B1F] rounded-lg overflow-hidden p-6">
            <div class="flex flex-col h-full">
              <h2 class="text-2xl font-bold mb-2 group-hover:text-blue-400 transition-colors">
                {post.title}
              </h2>
              <p class="text-gray-400 mb-4">
                {post.description}
              </p>
              <div class="flex items-center gap-3">
                <div class="w-8 h-8 rounded-full bg-gray-700 flex items-center justify-center text-sm">
                  {post.author?.name?.[0]?.toUpperCase() || 'A'}
                </div>
                <div>
                  <div class="text-sm">
                    By {post.author?.name || 'Anonymous'}
                  </div>
                  <div class="text-sm text-gray-400">
                    {post.category}
                  </div>
                </div>
              </div>
            </div>
          </article>
        </a>
      ))}
    </div>
  </div>
) : null}