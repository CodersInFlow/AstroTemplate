---
// Import the generated CSS directly without path conflicts
import darkflowsStyles from './styles/main.css?raw';
// Import DevModeOverlay for development
import DevModeOverlay from '../../shared/components/Dev/DevModeOverlay.tsx';
import TopNavBarData from '../../shared/components/Navigation/TopNavBarData.astro';

// Import navbar data
import navbarData from './data/navbar.json';

export interface Props {
  title?: string;
  description?: string;
}

const { title = 'DarkFlows Router OS', description = 'High Performance Routing and Firewalling Reimagined' } = Astro.props;
import config from './config.json';

// Check if we're in development mode
const isDevelopment = import.meta.env.DEV;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon-darkflows.svg" />
    <link rel="apple-touch-icon" href="/apple-icon.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
  </head>
  <body class="bg-background text-text-primary">
    <style set:html={darkflowsStyles}></style>
    <TopNavBarData data={navbarData} />
    <slot />
    {isDevelopment && <DevModeOverlay client:load />}
  </body>
</html>

<style is:global>
  /* Tailwind styles now imported via themes.css */
  
  body {
    font-family: 'Inter', system-ui, -apple-system, sans-serif;
  }

  img {
    image-rendering: -webkit-optimize-contrast;
    backface-visibility: hidden;
  }

  html {
    scroll-behavior: smooth;
  }
</style>