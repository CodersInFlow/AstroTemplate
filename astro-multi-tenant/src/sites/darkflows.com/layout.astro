---
import '../../styles/themes.css';

export interface Props {
  title?: string;
  description?: string;
}

const { title = 'DarkFlows Router OS', description = 'High Performance Routing and Firewalling Reimagined' } = Astro.props;
import config from './config.json';

// Detect theme based on hostname
const hostname = Astro.request.headers.get('host') || '';
let theme = 'darkflows'; // default for this site

if (hostname.includes('codersinflow')) {
  theme = 'codersinflow';
} else if (hostname.includes('prestongarrison')) {
  theme = 'prestongarrison';
}
---

<!DOCTYPE html>
<html lang="en" data-theme={theme}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/icon.svg" />
    <link rel="apple-touch-icon" href="/apple-icon.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
  </head>
  <body class="bg-background text-text-primary">
    <slot />
  </body>
</html>

<style is:global>
  /* Tailwind styles now imported via themes.css */
  
  body {
    font-family: 'Inter', system-ui, -apple-system, sans-serif;
  }

  img {
    image-rendering: -webkit-optimize-contrast;
    backface-visibility: hidden;
  }

  html {
    scroll-behavior: smooth;
  }
</style>