---
import Layout from '../layout.astro';
import SwirlingParticles from '../../../shared/components/Effects/SwirlingParticles.astro';
import TopNavBar from '../../../shared/components/Navigation/TopNavBar.astro';
import FeaturedPost from '../../../shared/components/Features/FeaturedPost.astro';
import ScrollReveal from '../../../shared/components/Effects/ScrollReveal.astro';
import DataConnectSection from '../../../shared/components/Sections/DataConnectSection.astro';
import FeatureCarousel from '../../../shared/components/Features/FeatureCarousel.astro';
import FAQ from '../../../shared/components/FAQ/FAQ.astro';
import Footer from '../../../shared/components/Footer/Footer.astro';
import { API_URL } from '../../../shared/lib/api-config';
import siteContent from '../site-content.json';

const { dataConnectSections, carousel } = siteContent;
---

<Layout>
  <main class="min-h-screen bg-background relative">
    <SwirlingParticles />
    <div class="relative z-20">
      <TopNavBar />
      <FeaturedPost apiUrl={API_URL} />
      <ScrollReveal hero={siteContent.hero} />
      <div class="space-y-2">
        {dataConnectSections.map((section, index) => (
          <DataConnectSection
            data={section}
            imageOnRight={index % 2 === 0}
          />
        ))}
      </div>
      <FeatureCarousel items={carousel} />
      <FAQ faq={siteContent.faq} />
      <Footer footer={siteContent.footer} />
    </div>
  </main>
</Layout>