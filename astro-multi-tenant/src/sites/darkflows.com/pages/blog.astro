---
import Layout from '../layout.astro';
import TopNavBar from '../components/TopNavBar.astro';
import Footer from '../components/Footer.astro';

// Fetch posts and categories
let posts = [];
let categories = [{ _id: 'all', name: 'All', slug: 'all' }];
const selectedCategory = Astro.url.searchParams.get('category') || 'All';

try {
  // Fetch categories
  const categoriesRes = await fetch('http://127.0.0.1:3001/api/categories');
  const categoriesData = await categoriesRes.json();
  if (categoriesData.categories) {
    categories = [
      { _id: 'all', name: 'All', slug: 'all' },
      ...categoriesData.categories
    ];
  }

  // Fetch posts
  const postsUrl = selectedCategory && selectedCategory !== 'All' 
    ? `http://127.0.0.1:3001/api/posts?category=${encodeURIComponent(selectedCategory)}`
    : 'http://127.0.0.1:3001/api/posts';
  
  const postsRes = await fetch(postsUrl);
  const postsData = await postsRes.json();
  if (postsData.posts) {
    posts = postsData.posts;
  }
} catch (error) {
  console.error('Error fetching data:', error);
}

// Split posts into featured and regular
const featuredPosts = posts.filter(post => post.category?.name === 'Featured');
const regularPosts = posts.filter(post => post.category?.name !== 'Featured');
---

<Layout>
  <main class="min-h-screen bg-black">
    <TopNavBar />
    <div class="max-w-7xl mx-auto px-4 py-8 mt-12">
      <div class="flex justify-between items-center mb-8">
        <div class="flex items-center gap-4">
          <h1 class="text-3xl font-bold text-white">Blog Posts</h1>
          <div class="flex gap-2">
            {categories.map((category) => (
              <a
                href={`/blog${category.slug === 'all' ? '' : `?category=${encodeURIComponent(category.name)}`}`}
                class={`px-3 py-1 rounded-full text-sm ${
                  selectedCategory === category.name || (!selectedCategory && category.slug === 'all')
                    ? 'bg-blue-600 text-white'
                    : 'bg-gray-800 text-gray-300 hover:bg-gray-700'
                }`}
              >
                {category.name}
              </a>
            ))}
          </div>
        </div>
      </div>

      {/* Featured Posts */}
      {featuredPosts.length > 0 && (
        <div class="mb-12">
          <h2 class="text-2xl font-bold mb-6 text-white">Featured</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {featuredPosts.map((post) => (
              <a href={`/blog/${post._id}`} class="group">
                <article class="h-full bg-[#1B1B1F] rounded-lg overflow-hidden p-6">
                  <div class="flex flex-col h-full">
                    <h2 class="text-2xl font-bold mb-2 text-white group-hover:text-blue-400 transition-colors">
                      {post.title}
                    </h2>
                    <p class="text-gray-400 mb-4">
                      {post.description}
                    </p>
                    <div class="flex items-center gap-3">
                      <div class="w-8 h-8 rounded-full bg-gray-700 flex items-center justify-center text-sm text-white">
                        {post.author?.name?.[0]?.toUpperCase() || 'A'}
                      </div>
                      <div>
                        <div class="text-sm text-gray-300">
                          By {post.author?.name || 'Anonymous'}
                        </div>
                        <div class="text-sm text-gray-400">
                          {post.category?.name || 'Uncategorized'}
                        </div>
                      </div>
                    </div>
                  </div>
                </article>
              </a>
            ))}
          </div>
        </div>
      )}

      {/* Regular Posts */}
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {regularPosts.map((post) => (
          <a href={`/blog/${post._id}`} class="group">
            <article class="h-full bg-[#1B1B1F] rounded-lg overflow-hidden p-4">
              <div class="flex flex-col h-full">
                <h2 class="text-xl font-bold mb-2 text-white group-hover:text-blue-400 transition-colors">
                  {post.title}
                </h2>
                <p class="text-gray-400 text-sm mb-4">
                  {post.description}
                </p>
                <div class="flex items-center gap-2 mt-auto">
                  <div class="w-6 h-6 rounded-full bg-gray-700 flex items-center justify-center text-sm text-white">
                    {post.author?.name?.[0]?.toUpperCase() || 'A'}
                  </div>
                  <div class="flex-grow">
                    <div class="text-sm text-gray-300">
                      By {post.author?.name || 'Anonymous'}
                    </div>
                    <div class="text-sm text-gray-400">
                      {post.category?.name || 'Uncategorized'}
                    </div>
                  </div>
                </div>
              </div>
            </article>
          </a>
        ))}
      </div>

      {posts.length === 0 && (
        <div class="text-center py-12 text-gray-400">
          No posts found {selectedCategory && selectedCategory !== 'All' && `in ${selectedCategory} category`}
        </div>
      )}
    </div>
    <Footer />
  </main>
</Layout>