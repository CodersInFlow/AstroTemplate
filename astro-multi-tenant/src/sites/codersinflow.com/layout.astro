---
export interface Props {
  title: string;
}

const { title } = Astro.props;
import config from './config.json';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="AI-Powered Pair Programming with Coders In Flow" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} - CodersInFlow</title>
    <style is:global>
      body {
        background: linear-gradient(135deg, #0a0a1f 0%, #1a1a3f 100%);
        color: #ffffff;
        margin: 0;
        font-family: system-ui, -apple-system, sans-serif;
        min-height: 100vh;
      }
      .nav-gradient {
        background: rgba(10, 10, 31, 0.95);
        backdrop-filter: blur(10px);
      }
      
      /* Blog component theme for CodersInFlow */
      .blog-category-btn {
        background-color: rgba(59, 130, 246, 0.1);
        color: #60a5fa;
        border: 1px solid rgba(59, 130, 246, 0.2);
      }
      
      .blog-category-btn:hover {
        background-color: rgba(59, 130, 246, 0.2);
        border-color: rgba(59, 130, 246, 0.3);
      }
      
      .blog-category-active {
        background-color: #3b82f6 !important;
        color: white !important;
        border-color: #3b82f6 !important;
      }
      
      .blog-card {
        background-color: #1a1a2e !important;
        border: 1px solid rgba(59, 130, 246, 0.2) !important;
        color: white !important;
      }
      
      .blog-card:hover {
        background-color: #252542 !important;
        border-color: rgba(59, 130, 246, 0.4) !important;
      }
      
      .blog-card h2 {
        color: white !important;
      }
      
      .blog-card-title {
        color: white !important;
      }
      
      .blog-excerpt {
        color: #cbd5e1;
      }
      
      .blog-date {
        color: #94a3b8;
      }
      
      /* Blog post styles */
      .blog-post-wrapper {
        background: linear-gradient(135deg, #0a0a1f 0%, #1a1a3f 100%);
        min-height: 100vh;
        padding: 2rem 1rem;
      }
      
      .blog-post-title {
        color: white !important;
      }
      
      .blog-post-meta {
        color: #94a3b8 !important;
      }
      
      .blog-post-meta span {
        color: #94a3b8 !important;
      }
      
      .blog-post-content {
        color: #e2e8f0 !important;
      }
      
      .blog-post-content h1,
      .blog-post-content h2,
      .blog-post-content h3,
      .blog-post-content h4,
      .blog-post-content h5,
      .blog-post-content h6 {
        color: white;
      }
      
      .blog-post-content p {
        color: #cbd5e1;
      }
      
      .blog-post-content a {
        color: #60a5fa;
      }
      
      .blog-post-content a:hover {
        color: #93c5fd;
      }
      
      .blog-post-content code {
        background-color: rgba(59, 130, 246, 0.1);
        color: #93c5fd;
        padding: 0.125rem 0.25rem;
        border-radius: 0.25rem;
      }
      
      .blog-post-content pre {
        background-color: #1e293b;
        border: 1px solid rgba(59, 130, 246, 0.2);
      }
      
      /* Blog post page styles */
      .blog-post-page {
        background: linear-gradient(135deg, #0a0a1f 0%, #1a1a3f 100%);
      }
      
      .blog-post-container {
        background-color: #1a1a2e;
        padding: 2rem;
        border-radius: 0.5rem;
        border: 1px solid rgba(59, 130, 246, 0.2);
      }
    </style>
  </head>
  <body style="background: linear-gradient(135deg, #0a0a1f 0%, #1a1a3f 100%); color: #ffffff; margin: 0; font-family: system-ui, -apple-system, sans-serif; min-height: 100vh;">
    <nav class="nav-gradient border-b border-blue-800/30 sticky top-0 z-50">
      <div class="container mx-auto px-4">
        <div class="flex items-center justify-between h-16">
          <div class="flex items-center gap-8">
            <a href="/" class="text-xl font-bold bg-gradient-to-r from-blue-400 to-purple-600 bg-clip-text text-transparent">
              CodersInFlow
            </a>
            <div class="flex gap-6">
              <a href="/" class="hover:text-blue-400 transition">Home</a>
              <a href="/features" class="hover:text-blue-400 transition">Features</a>
              <a href="/enterprise" class="hover:text-blue-400 transition">Enterprise</a>
              <a href="/blog" class="hover:text-blue-400 transition">Blog</a>
              <a href="/docs" class="hover:text-blue-400 transition">Docs</a>
            </div>
          </div>
          <div class="flex gap-4">
            <a href="/download" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition">
              Install
            </a>
          </div>
        </div>
      </div>
    </nav>
    <slot />
  </body>
</html>