---
import HeaderSimple from '../../shared/components/coders/HeaderSimple.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props;
import config from './config.json';

// Detect which CSS to use based on hostname
const hostname = Astro.request.headers.get('host') || '';
let siteName = 'codersinflow'; // default

if (hostname.includes('darkflows')) {
  siteName = 'darkflows';
} else if (hostname.includes('prestongarrison')) {
  siteName = 'prestongarrison';
}

// Dynamically import the CSS based on site
let cssImport = '';
if (siteName === 'darkflows') {
  cssImport = await import('../../styles/sites/darkflows.css?raw');
} else if (siteName === 'prestongarrison') {
  cssImport = await import('../../styles/sites/prestongarrison.css?raw');
} else {
  cssImport = await import('../../styles/sites/codersinflow.css?raw');
}
const siteCSS = cssImport.default || '';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="AI-Powered Pair Programming with Coders In Flow" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} - CodersInFlow</title>
    <style is:global set:html={siteCSS}></style>
  </head>
  <body class="bg-background text-text-primary min-h-screen">
    <HeaderSimple />
    <div style="height: 56px;"></div> <!-- Spacer for fixed header -->
    <slot />
  </body>
</html>