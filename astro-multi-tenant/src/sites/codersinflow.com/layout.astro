---
export interface Props {
  title: string;
}

const { title } = Astro.props;
import config from './config.json';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="AI-Powered Pair Programming with Coders In Flow" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} - CodersInFlow</title>
    <style is:global>
      /* No need for custom blog styles - components use Tailwind semantic colors */
    </style>
  </head>
  <body class="bg-background text-text-primary min-h-screen">
    <nav class="bg-surface/95 backdrop-blur-md border-b border-border sticky top-0 z-50">
      <div class="container mx-auto px-4">
        <div class="flex items-center justify-between h-16">
          <div class="flex items-center gap-8">
            <a href="/" class="text-xl font-bold text-primary">
              CodersInFlow
            </a>
            <div class="flex gap-6">
              <a href="/" class="text-text-secondary hover:text-link-hover transition">Home</a>
              <a href="/features" class="text-text-secondary hover:text-link-hover transition">Features</a>
              <a href="/enterprise" class="text-text-secondary hover:text-link-hover transition">Enterprise</a>
              <a href="/blog" class="text-text-secondary hover:text-link-hover transition">Blog</a>
              <a href="/docs" class="text-text-secondary hover:text-link-hover transition">Docs</a>
            </div>
          </div>
          <div class="flex gap-4">
            <a href="/download" class="bg-primary text-text-inverse px-4 py-2 rounded-lg hover:bg-primary/90 transition">
              Install
            </a>
          </div>
        </div>
      </div>
    </nav>
    <slot />
  </body>
</html>