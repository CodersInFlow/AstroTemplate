---
import HeaderSimple from '../../shared/components/coders/HeaderSimple.astro';
import './styles/main.css';  // Import this site's CSS directly

export interface Props {
  title: string;
}

const { title } = Astro.props;
import config from './config.json';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="AI-Powered Pair Programming with Coders In Flow" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} - CodersInFlow</title>
  </head>
  <body class="bg-background text-text-primary min-h-screen">
    <HeaderSimple />
    <div style="height: 56px;"></div> <!-- Spacer for fixed header -->
    <slot />
  </body>
</html>