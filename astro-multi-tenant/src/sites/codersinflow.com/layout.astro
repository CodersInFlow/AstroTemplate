---
// Import the generated CSS directly without path conflicts
import codersinflowStyles from './styles/main.css?raw';
import HeaderSimple from '../../shared/components/Headers/HeaderSimple.astro';
// Import DevModeOverlay for development
import DevModeOverlay from '../../shared/components/Dev/DevModeOverlay.tsx';

export interface Props {
  title: string;
}

const { title } = Astro.props;
import config from './config.json';

// Check if we're in development mode
const isDevelopment = import.meta.env.DEV;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="AI-Powered Pair Programming with Coders In Flow" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon-codersinflow.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} - CodersInFlow</title>
  </head>
  <body class="bg-background text-text-primary min-h-screen">
    <style set:html={codersinflowStyles}></style>
    <HeaderSimple />
    <div style="height: 56px;"></div> <!-- Spacer for fixed header -->
    <slot />
    {isDevelopment && <DevModeOverlay client:load />}
  </body>
</html>