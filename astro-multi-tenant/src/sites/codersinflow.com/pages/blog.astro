---
import Layout from '../layout.astro';
import BlogList from '../../../shared/components/BlogList.astro';

const category = Astro.url.searchParams.get('category');
---

<Layout title="Blog - CodersInFlow">
  <main class="min-h-screen" style="background: linear-gradient(135deg, #0a0a1f 0%, #1a1a3f 100%);">
    <div class="container mx-auto px-4 py-8">
      <h1 class="text-4xl font-bold mb-8 text-white">Blog</h1>
      <BlogList database="codersinflow_db" category={category} />
    </div>
  </main>
</Layout>