---
import Layout from '../layout.astro';
import Footer from '../../../shared/components/Footer/Footer.astro';
import DevWrapper from '../../../shared/components/Dev/DevWrapper.astro';

// Import data
import featuresData from '../data/features.json';
import comparisonData from '../data/comparison.json';
import videosData from '../data/videos.json';
import heroComparisonData from '../data/hero-comparison.json';
import whyBetterData from '../data/why-better.json';
import featureGridData from '../data/feature-grid.json';

// Hero and Feature Showcase components
import HeroComparison from '../../../shared/components/Hero/HeroComparison';
import FeatureShowcaseSection from '../../../shared/components/Features/FeatureShowcaseSection';
import ComparisonTable from '../../../shared/components/Comparison/ComparisonTable';

// Section components
import WhyBetterSection from '../../../shared/components/Sections/WhyBetterSection';
import VideoSection from '../../../shared/components/Sections/VideoSection';
import KeyFeaturesSection from '../../../shared/components/Sections/KeyFeaturesSection.astro';

// Interactive sections
import TechStackSection from '../../../shared/components/Sections/TechStackSection';
import TestimonialsWrapper from '../../../shared/components/Sections/TestimonialsWrapper';
import CallToAction from '../../../shared/components/Sections/CallToAction';
---

<Layout 
  title="AI-Powered Pair Programming with Coders In Flow - VSCode Extension for Developers"
  description="Better than RooCode, Cline & Cursor combined! Coders In Flow delivers next-gen AI pair programming for VSCode developers"
  keywords="AI coding assistant, code generation, Claude Code, DeepSeek, OpenAI, LM Studio, Ollama, context editing, VS Code extension, GitHub Copilot alternative, automatic memory, smart code completion"
>
  
  <!-- Hero Comparison Card -->
  <DevWrapper componentName="HeroComparison" dataPath="../data/hero-comparison.json" data={heroComparisonData}>
    <HeroComparison client:load data={heroComparisonData} />
  </DevWrapper>
  
  <!-- Feature Showcase Section with Hero and Features -->
  <DevWrapper componentName="FeatureShowcase" dataPath="../data/features.json" data={featuresData}>
    <FeatureShowcaseSection client:load data={featuresData} />
  </DevWrapper>
  
  <!-- Comparison Table -->
  <DevWrapper componentName="ComparisonTable" dataPath="../data/comparison.json" data={comparisonData}>
    <ComparisonTable client:load data={comparisonData} />
  </DevWrapper>
  
  <!-- Why We're Better Section -->
  <DevWrapper componentName="WhyBetterSection" dataPath="../data/why-better.json" data={whyBetterData}>
    <WhyBetterSection client:load data={whyBetterData} />
  </DevWrapper>
  
  <!-- Video Section -->
  <DevWrapper componentName="VideoSection" dataPath="../data/videos.json" data={videosData}>
    <VideoSection client:only="react" data={videosData} />
  </DevWrapper>
  
  <!-- Tech Stack Section -->
  <!-- TechStackSection client:visible -->
  
  <!-- Key Features Section with FeatureGrid -->
  <DevWrapper componentName="KeyFeaturesSection" dataPath="../data/feature-grid.json" data={featureGridData}>
    <KeyFeaturesSection featureGridData={featureGridData} />
  </DevWrapper>
  
  <!-- Testimonials Section -->
  <!-- <TestimonialsWrapper client:visible /> -->
  
  <!-- Call to Action -->
  <!-- <CallToAction client:visible /> -->
  
  <!-- Static footer -->
  <Footer />
</Layout>