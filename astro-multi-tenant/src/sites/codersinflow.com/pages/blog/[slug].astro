---
import Layout from '../../layout.astro';
import BlogPost from '../../../../shared/components/BlogPost.astro';

// Get slug from props (passed by router) or params (direct access)
const slug = Astro.props.slug || Astro.params.slug;
---

<Layout title="Blog Post - CodersInFlow">
  <main class="min-h-screen" style="background: linear-gradient(135deg, #0a0a1f 0%, #1a1a3f 100%);">
    <div class="container mx-auto px-4 py-8">
      <div style="background-color: #1a1a2e; padding: 2rem; border-radius: 0.5rem; border: 1px solid rgba(59, 130, 246, 0.2);">
        <BlogPost slug={slug} database="codersinflow_db" />
      </div>
    </div>
  </main>
</Layout>

<style>
  main {
    background: linear-gradient(135deg, #0a0a1f 0%, #1a1a3f 100%) !important;
  }
</style>