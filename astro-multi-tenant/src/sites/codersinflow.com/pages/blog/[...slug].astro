---
// This page handles all blog routes and delegates to the BlogApp component
export const prerender = false;

import Layout from '../../layout.astro';
import BlogApp from '../../../../modules/blog/BlogApp.astro';

// Import blog theme styles
import '../../../../modules/blog/styles/blog-theme.css';

// Coders in Flow blog theme configuration - using blue color scheme
const blogTheme = {
  // Primary button colors
  btnPrimary: 'bg-blue-600 hover:bg-blue-700 text-white',
  btnSecondary: 'bg-blue-100 hover:bg-blue-200 text-blue-900',
  
  // Links
  link: 'text-blue-600 hover:text-blue-800',
  
  // Cards
  card: 'bg-white hover:bg-blue-50 border-blue-200',
  
  // Text colors
  textPrimary: 'text-gray-900',
  textSecondary: 'text-gray-600',
  textMuted: 'text-gray-500',
  
  // Form elements
  input: 'border-blue-300 focus:ring-blue-500',
  
  // Navigation
  navActive: 'border-blue-600 text-blue-600',
  navInactive: 'text-gray-600 hover:text-blue-600',
  
  // Badges
  badge: 'bg-blue-100 text-blue-800',
  
  // Accent color for categories
  categoryBg: 'bg-blue-600 hover:bg-blue-700',
  categoryText: 'text-white'
};
---

<Layout title="Blog">
  <BlogApp theme={blogTheme} />
</Layout>