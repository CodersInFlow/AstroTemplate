---
// This page handles all blog routes and delegates to the BlogApp component
export const prerender = false;

import Layout from '../../layout.astro';
import BlogApp from '../../../../modules/blog/BlogApp.astro';
import config from '../../config.json';

// Import blog theme styles
import '../../../../modules/blog/styles/blog-theme.css';

// Coders in Flow blog theme - dark theme with blue accents
// Using Tailwind's standard blue colors to match the site
const blogTheme = {
  mode: 'dark',
  primaryColor: config.theme.primaryColor, // #3B82F6 (blue-500)
  secondaryColor: config.theme.secondaryColor, // #8B5CF6 (violet-500)
  
  // Dark theme using standard Tailwind classes
  pageBg: 'bg-gray-900',
  contentBg: 'bg-gray-800',
  
  // Using Tailwind's blue color palette
  btnPrimary: 'bg-blue-500 hover:bg-blue-600 text-white',
  btnSecondary: 'bg-gray-700 hover:bg-gray-600 text-gray-100',
  btnDanger: 'bg-red-600 hover:bg-red-700 text-white',
  
  // Text colors for dark theme
  textPrimary: 'text-gray-100',
  textSecondary: 'text-gray-300',
  textMuted: 'text-gray-500',
  
  // Links using blue accent
  link: 'text-blue-400 hover:text-blue-300',
  linkDanger: 'text-red-400 hover:text-red-300',
  
  // Cards and containers
  card: 'bg-gray-800 border-gray-700',
  cardHover: 'hover:bg-gray-750',
  
  // Form elements
  input: 'bg-gray-700 border-gray-600 text-white placeholder-gray-400 focus:border-blue-500 focus:ring-blue-500',
  select: 'bg-gray-700 border-gray-600 text-white focus:border-blue-500 focus:ring-blue-500',
  checkbox: 'bg-gray-700 border-gray-600 text-blue-500 focus:ring-blue-500',
  
  // Navigation
  navBg: 'bg-gray-800 border-gray-700',
  navActive: 'border-blue-500 text-blue-400',
  navInactive: 'text-gray-400 hover:text-gray-200 border-transparent',
  
  // Badges and labels
  badge: 'bg-blue-900 text-blue-200',
  badgeSecondary: 'bg-gray-700 text-gray-300',
  
  // Categories
  categoryBg: 'bg-blue-500 hover:bg-blue-600',
  categoryText: 'text-white',
  
  // Alerts
  alertSuccess: 'bg-green-900 text-green-200 border-green-700',
  alertError: 'bg-red-900 text-red-200 border-red-700',
  alertInfo: 'bg-blue-900 text-blue-200 border-blue-700'
};
---

<Layout title="Blog">
  <BlogApp theme={blogTheme} config={config} />
</Layout>