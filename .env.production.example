# MongoDB Configuration
# Note: MONGODB_URI is automatically constructed in docker-compose using MONGO_PASSWORD
MONGO_PASSWORD=your_secure_mongo_password_here

# Application Configuration
JWT_SECRET=your_secure_jwt_secret_here
DOMAIN=codersinflow.com
PUBLIC_API_URL=https://codersinflow.com

# Admin User (optional - created on first run)
ADMIN_EMAIL=admin@codersinflow.com
ADMIN_PASSWORD=your_secure_admin_password

# Docker Hub (for building/pushing images)
DOCKER_USERNAME=proggod
# DOCKER_PASSWORD=your_docker_hub_token (set as environment variable, not in file)