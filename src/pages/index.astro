---
import Layout from '../layouts/Layout.astro';
import Header from '../components/HeaderSimple.astro';
import HeroWithCards from '../components/HeroWithCards.astro';
import Footer from '../components/Footer.astro';

// Interactive sections
import InteractiveCardSection from '../components/InteractiveCardSection';
---

<Layout title="Coders in Flow - Interactive Card Experience">
  <!-- Static header and hero - no JavaScript shipped -->
  <Header />
  <HeroWithCards />
  
  <!-- Interactive CardStacker - only loads JS for this component -->
  <InteractiveCardSection client:visible />
  
  <!-- Static footer - no JavaScript shipped -->
  <Footer />
</Layout>
