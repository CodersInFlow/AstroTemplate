---
import Layout from '../layouts/Layout.astro';
import Header from '../components/coders/HeaderSimple.astro';
import Footer from '../components/coders/Footer.astro';

// Import data
import featuresData from '../data/features.json';
import comparisonData from '../data/comparison.json';
import videosData from '../data/videos.json';

// Hero and Feature Showcase components
import HeroComparison from '../components/coders/HeroComparison';
import FeatureShowcaseSection from '../components/coders/FeatureShowcaseSection';
import ComparisonTable from '../components/coders/ComparisonTable';

// Section components
import WhyBetterSection from '../components/coders/sections/WhyBetterSection';
import VideoSection from '../components/coders/sections/VideoSection';
import KeyFeaturesSection from '../components/coders/sections/KeyFeaturesSection.astro';

// Interactive sections
import TechStackSection from '../components/sections/TechStackSection';
import TestimonialsWrapper from '../components/sections/TestimonialsWrapper';
import CallToAction from '../components/CallToAction';
---

<Layout 
  title="AI-Powered Pair Programming with Coders In Flow - VSCode Extension for Developers"
  description="Better than RooCode, Cline & Cursor combined! Coders In Flow delivers next-gen AI pair programming for VSCode developers"
  keywords="AI coding assistant, code generation, Claude Code, DeepSeek, OpenAI, LM Studio, Ollama, context editing, VS Code extension, GitHub Copilot alternative, automatic memory, smart code completion"
>
  <!-- Static header -->
  <Header />
  
  <!-- Hero Comparison Card -->
  <HeroComparison client:load />
  
  <!-- Feature Showcase Section with Hero and Features -->
  <FeatureShowcaseSection client:load data={featuresData} />
  
  <!-- Comparison Table -->
  <ComparisonTable client:load data={comparisonData} />
  
  <!-- Why We're Better Section -->
  <WhyBetterSection client:load />
  
  <!-- Video Section -->
  <VideoSection client:only="react" data={videosData} />
  
  <!-- Tech Stack Section -->
  <!-- TechStackSection client:visible -->
  
  <!-- Key Features Section with FeatureGrid -->
  <KeyFeaturesSection />
  
  <!-- Testimonials Section -->
  <!-- <TestimonialsWrapper client:visible /> -->
  
  <!-- Call to Action -->
  <!-- <CallToAction client:visible /> -->
  
  <!-- Static footer -->
  <Footer />
</Layout>