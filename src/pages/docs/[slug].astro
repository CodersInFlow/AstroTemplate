---
import Layout from '../../layouts/Layout.astro';
import HeaderSimple from '../../components/HeaderSimple.astro';
import RichTextRenderer from '../../components/RichTextRenderer';

const { slug } = Astro.params;

// Fetch the doc
const API_URL = import.meta.env.PUBLIC_API_URL || 'http://localhost:8749';
const response = await fetch(`${API_URL}/api/posts/${slug}`);

if (!response.ok) {
  return Astro.redirect('/404');
}

const doc = await response.json();
---

<Layout title={`${doc.title} - Documentation`}>
  <HeaderSimple />
  
  <main class="container mx-auto px-4 py-8 max-w-4xl">
    <article>
      {doc.coverImage && (
        <div class="mb-8 rounded-xl overflow-hidden">
          <img 
            src={doc.coverImage} 
            alt={doc.title}
            class="w-full h-[400px] object-cover"
          />
        </div>
      )}

      <header class="mb-8">
        <div class="flex items-center gap-2 text-gray-400 text-sm mb-2">
          <span>{doc.category_data?.name || 'Uncategorized'}</span>
          <span>•</span>
          <span>{new Date(doc.createdAt).toLocaleDateString()}</span>
          <span>•</span>
          <span>{doc.readingTime} min read</span>
        </div>

        <h1 class="text-4xl font-bold mb-4">{doc.title}</h1>
        
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 rounded-full bg-gray-700 flex items-center justify-center">
            {doc.author_data?.name?.[0]?.toUpperCase() || 'A'}
          </div>
          <div>
            <div class="font-medium">{doc.author_data?.name || 'Anonymous'}</div>
            <div class="text-sm text-gray-400">{doc.author_data?.email || ''}</div>
          </div>
        </div>
      </header>

      <RichTextRenderer client:load content={doc.content} />
    </article>

    <div class="mt-12 pt-8 border-t border-gray-800">
      <a href="/docs" class="text-blue-400 hover:text-blue-300">
        ← Back to Documentation
      </a>
    </div>
  </main>
</Layout>

<style>
  .prose {
    @apply text-gray-300;
  }
  
  .prose h1, .prose h2, .prose h3 {
    @apply text-white font-bold;
  }
  
  .prose h1 {
    @apply text-3xl mt-8 mb-4;
  }
  
  .prose h2 {
    @apply text-2xl mt-6 mb-3;
  }
  
  .prose h3 {
    @apply text-xl mt-4 mb-2;
  }
  
  .prose p {
    @apply mb-4 leading-relaxed;
  }
  
  .prose code {
    @apply bg-gray-800 px-1 py-0.5 rounded;
  }
  
  .prose pre {
    @apply bg-gray-900 p-4 rounded-lg overflow-x-auto;
  }
  
  .prose a {
    @apply text-blue-400 hover:text-blue-300 underline;
  }
  
  .prose blockquote {
    @apply border-l-4 border-gray-700 pl-4 italic;
  }
</style>