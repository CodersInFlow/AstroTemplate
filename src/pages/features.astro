---
import Layout from '../layouts/Layout.astro';
import Header from '../components/src/components/coders/HeaderSimple.astro';
import Footer from '../components/src/components/coders/Footer.astro';
import DetailedFeatureCard from '../components/src/components/coders/DetailedFeatureCard.astro';
import detailedFeaturesData from '../data/detailed-features.json';
---

<Layout 
  title="Features - Coders In Flow AI-Powered Pair Programming"
  description="Explore all the powerful features of Coders In Flow - from multi-tasking AI to enterprise team management"
  keywords="AI coding features, multi-tasking, Claude Code integration, semantic search, git integration, mobile app, enterprise features"
>
  <!-- Header -->
  <Header />
  
  <!-- Hero Section -->
  <div class="pt-14 bg-gray-950">
    <div class="max-w-7xl mx-auto py-16 px-4 text-center">
      <h1 class="text-5xl md:text-6xl font-bold text-white mb-6">
        {detailedFeaturesData.hero.title}
      </h1>
      <p class="text-xl text-gray-300 max-w-3xl mx-auto">
        {detailedFeaturesData.hero.description}
      </p>
    </div>
  </div>
  
  <!-- Detailed Feature Cards -->
  {detailedFeaturesData.features.map((feature) => (
    <div id={feature.id}>
      <DetailedFeatureCard
        title={feature.title}
        description={feature.description}
        features={feature.features}
        gradient={feature.gradient}
        videoSrc={feature.videoSrc}
        youtubeUrl={feature.youtubeUrl}
        reverse={feature.reverse}
      />
    </div>
  ))}
  
  <!-- CTA Section -->
  <div class="bg-gray-950 py-16">
    <div class="max-w-4xl mx-auto text-center px-4">
      <h2 class="text-3xl font-bold text-white mb-6">{detailedFeaturesData.cta.title}</h2>
      <p class="text-xl text-gray-300 mb-8">{detailedFeaturesData.cta.description}</p>
      <a href={detailedFeaturesData.cta.buttonLink} class="inline-block px-8 py-3 bg-indigo-600 text-white font-semibold rounded-lg hover:bg-indigo-700 transition-colors">
        {detailedFeaturesData.cta.buttonText}
      </a>
    </div>
  </div>
  
  <!-- Footer -->
  <Footer />
</Layout>